from distributions import normal, halfnormal

real_alpha = 1

real_beta0 = 1
real_beta1 = 2.5
noise = normal(0,1, 100)
X1 = normal(0,1,100)
X2 = normal(0,1,100) * 0.2
real_sigma = 1

Y = real_alpha + real_beta0*X1 + real_beta1*X2 + noise*real_sigma


alpha ~ normal(0,10)
beta0 ~ normal(0,10)
beta1 ~ normal(0,10)
sigma ~ halfnormal(1)

mu = alpha + beta0*X1 + beta1 * X2
Y ~ normal(mu, sigma)
